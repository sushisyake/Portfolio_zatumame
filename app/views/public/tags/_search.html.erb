<h2 class="ml-3">タグ検索</h2>
<%= form_tag({controller:"articles",action:"index"}, method: :get) do %>
  <div class="d-flex flex-row flex-wrap">
    <% Tag.all.each do |t| %>
      <div class="mb-1 mr-2">
        <%= check_box :tag_ids, t.id %><%= t.name %>(<%= t.articles.count %>)
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end">
    <%= button_tag type: "submit", class: "btn btn-link btn btn-outline-secondary" do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
<% end %>