<div class="d-flex justify-content-end mt-3 mr-5">
  <% if user_signed_in? %>
    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([['User'], ['Article']]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>