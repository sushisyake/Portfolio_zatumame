
<div class="row d-flex mt-5 ">
  <div class="col-1"></div>

    <div class="col-8">
      <div class="d-flex">
        <p style="font-size:35px">投稿一覧</p>
<%= render 'public/searches/search' %>

<%= form_tag({controller:"articles",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <ul><%= check_box :tag_ids, t.name %><%= t.name %></ul>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"articles",action:"index"}, method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'タグを追加' %>
<% end %>


        <p style="font-size:25px; line-height: 2;">(全<%= @articles.count %>件)</p>
      </div>
      <div class=" articles_width">
        <% @articles.each do |article| %>
          <div class="mx-3 my-3">
            <%= link_to article_path(article) do %>
            <%= article.question %><br>
            <% end %><br>
            <div class = "favorite-btn-<%= article.id %>">
            <%= render 'public/favorites/button', article: article %>
            <div class = "unfavorite-btn-<%= article.id %>">
            <%= render 'public/unfavorites/button', article: article %>

          </div>
        <% end %>
      </div>
    </div>
</div>