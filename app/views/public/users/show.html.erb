<div class='container my-5'>
  <div class='row align-items-start'>
    <div class='col-md-3'>
      <h2>user info</h2>
      <%= render 'info', user: @user %>
      <%=link_to"お気に入り記事",favorites_user_path(@user) %><br>
      <% if @user.id == current_user.id %>
        <%= link_to "退会する", confirm_path(@user) %>
      <% end %>
    </div>
    <table class='col-md-8 offset-md-1 table-striped'>
      <% @articles.each do |article| %>
      <tr class="mx-3 my-3">
        <td>
          <%= link_to article_path(article) do %>
            <%= article.question %>
          <% end %>
          <div class = "d-flex justify-content-end">
            <%= render 'public/favorites/button', article: article %>
            <%= render 'public/unfavorites/button', article: article %>
          </div>
        </td>
      </tr>
      <% end %>
      <tr style="font-size:15px; line-height: 2;"><td><%= paginate @articles %></td></tr>
      <tr style="font-size:15px; line-height: 2;"><td>(全<%= @articles.count %>件)</td></tr>
    </table>
  </div><!-- row end -->
</div><!-- container end -->
