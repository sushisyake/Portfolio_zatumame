<table class='table'>
  <tbody>
    <tr><th>
    <% if user.id == current_user.id %>
    <%= form_with model: user, local:true do |f| %>
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class: "form-control name" %>

        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      <br>
        <%= f.submit class: 'btn btn-secondary' %>
        <% end %>
    <% else %>
        <%= user.nickname %>
        <%= user.introduction %>
    <% end %>
    </th></tr>
    <tr>
     <th>follows</th>
     <th><%= link_to user_followings_path(user) do %><%= user.followings.count %><% end %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= link_to user_followers_path(user) do %><%= user.followers.count %><% end %></th>
    </tr>
    <tr><th><% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-sm btn-info" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-sm btn-success" %>
                <% end %></th>
    </tr>
    </tbody>
  </table>
