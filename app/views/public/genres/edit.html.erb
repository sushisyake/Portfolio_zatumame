<div class="container">
  <% if @genre.errors.any? %>
    <tr>
      <td></td>
      <td>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul class="list-group list-unstyled">
          <% @genre.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <div class="mt-4">
    <div class="col-md-8">

      <h4><span class="bg-light">ジャンル編集</span></h4>
      <div class="col-12 mt-4" style="margin-bottom: 400px;">
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
      
          <%= f.label :name, 'ジャンル名',class:"mr-5" %>
          <%= f.text_field :name,class:"mr-5" %>
          <%= f.submit '変更を保存', class:"btn btn-sm btn-success px-4 pt-2 pb-2" %>
    
        <% end %>
      </div>

    </div>
  </div>
</div>